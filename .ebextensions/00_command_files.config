files:
  "/opt/elasticbeanstalk/hooks/appdeploy/post/01_collectstatic.sh":
    mode: "000755"
    owner: root
    group: root
    content: |
      #!/usr/bin/env bash
      if [ -f /tmp/collectstatic ]
      then
        rm /tmp/collectstatic
        docker exec `docker ps --no-trunc -q | head -n 1` python3 manage.py migrate
      fi